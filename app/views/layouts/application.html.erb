<!DOCTYPE html>
<html>
  <head>
    <title>Instantgram</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= render '/layouts/nav' %>
    <% if flash[:notice]%>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= flash[:notice] %>
        </div>
      </div>
    <% elsif flash[:danger] %>
      <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <%= flash[:danger] %>
        </div>
      </div>    
    <% end %>
    <div class='container'> 
    <%= yield %>
  </body>
</html>
